<div class="page-wrapper" ng-app="demoModule">

    <div class="content-wrapper">
        <div class="banner">
            <div class="container"> <img src="/Content/assets/images/banner_1.png" alt=""> </div>
        </div>
        <div class="clearfix"></div>
        <div class="container">
            <div class="sentence" ng-controller="demoCtrl">
                <div id="Profile1">
                    <div class="row" style="background-color:#E8E8E8">

                        <h1>Create Your Patient Profile</h1>

                        <div class="alert alert-danger" id="diverror" ng-show="person.Error" style="display:none;">
                            <strong id="errorStrong">Error!</strong><span ng-bind-html="person.MessageError"></span>
                        </div>
                        <div class="col-md-10 col-md-offset-2">


                            <div class="form-group col-md-5">
                                <label for="exampleInputEmail1" class="sr-only">Email address</label>
                                <input type="email" name="patient-portal-email"
                                       ng-maxlength="30" ng-minlength="6" required ng-model="person.Email"
                                       size="40" class="form-control input text-primary m_bottom_0" placeholder="Email" id="Email" />
                                <!--<input type="email" class="form-control input text-primary" placeholder="E-mail">-->
                            </div>
                            <div class="form-group col-md-5">
                                <label for="exampleInputEmail1" class="sr-only">Confirm email address</label>
                                <input type="email" name="patient-portal-emailrm-confi" ng-model="person.ConfirmEmail"
                                       ng-maxlength="30" ng-minlength="6" required
                                       size="40" class="form-control input text-primary m_bottom_0" placeholder="Confirm Email" id="ConfirmEmail" />
                                <!--<input type="email" class="form-control input text-primary" placeholder="Confirm Email Address">-->
                            </div>

                        </div>
                        <div class="col-md-10 col-md-offset-2 m_top_0">


                            <div class="col-md-5 form-group">
                                <label for="exampleInputEmail1" class="sr-only">Password</label>
                                <input type="password" required placeholder="Password"
                                       name="patient-portal-emailrm-confi" ng-model="person.PasswordHash"
                                       size="40" class="form-control input text-primary m_bottom_0" id="PasswordHash" />
                                <!--<input type="password" class="form-control input text-primary" placeholder="Password">-->

                            </div>

                            <div class=" col-md-5 form-group">
                                <label for="exampleInputEmail1" class="sr-only">Password</label>
                                <input type="password" ng-maxlength="30" ng-minlength="2" required
                                       ng-model="person.ConfirmPassword"
                                       name="patient-portal-emailrm-confi"
                                       size="40" class="form-control input text-primary m_bottom_0" placeholder="Confirm Password" id="ConfirmPassword" />
                                <!--<input type="password" class="form-control input text-primary" placeholder="Confirm-Password">-->
                            </div>
                        </div>
                       
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 col-lg-offset-4 col-sm-offset-4 col-md-offset-4">
                            <div class="form-group">
                                <input type="button" value="SUBMIT" id="signupbtn"
                                       class="btn btn-lg btn-block btn-oval btn-gray"
                                       data-ng-click="SignUp()" />
                                <!--<button type="submit" class="btn btn-lg btn-block btn-oval">Continue</button>-->
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Profile2" style="display:none;">
                    <div class="row" style="background-color:#E8E8E8">

                        <h1>Activate Your Patient Profile</h1>
                        <div class="alert alert-danger" id="diverror" ng-show="person.Error">
                            <strong id="errorStrong">Error!</strong><span ng-bind-html="person.MessageError"></span>
                        </div>

                        <div class="col-md-4 col-md-offset-4  text-center">
                            <div class="form-group">
                                <p>A confirmation code has been sent to your email.</p>
                                <p>Please check your email including the spam folder</p>
                                <p>and enter the confirmation code here.</p>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="sr-only">Enter Code</label>
                                <input type="text" name="activecode"
                                       ng-maxlength="20" ng-minlength="2" ng-required="true" required
                                       ng-model="person.ActiveCode" size="40"
                                       class="form-control input text-center btn-block" placeholder="Code" id="ActiveCode" autofocus />
                                <!--<input type="text" class=" form-control input text-center btn-block" placeholder="Enter Code">-->
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 col-lg-offset-4 col-sm-offset-4 col-md-offset-4">
                            <div class="form-group">
                                <input type="button" value="Continue" id="activatebtn"
                                       class="btn btn-lg btn-block btn-oval"
                                       data-ng-click="ActivateAccount()" />
                                <!--<button type="submit" class="btn btn-lg btn-block btn-oval">Continue</button>-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <img src="/Content/assets/images/boxshadow.png">
            </div>
        </div>

       
        <div class="sep col-sm-12"></div>
       
        <!-- Page Conetnt End -->
